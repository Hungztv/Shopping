@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "List Role";
}

<h3>List Role</h3>

<a class="btn btn-primary mb-3" asp-action="Create">
    <i class="fas fa-plus"></i> Add Role
</a>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Role Name</th>
            <th>Normalized Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.NormalizedName</td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-route-id="@item.Id">
                        <i class="fas fa-trash"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            document.querySelectorAll(".confirmDeletion").forEach(function(button) {
                button.addEventListener("click", function(event) {
                    if (!confirm("Are you sure you want to delete this role?")) {
                        event.preventDefault();
                    }
                });
            });
        });
    </script>
}

