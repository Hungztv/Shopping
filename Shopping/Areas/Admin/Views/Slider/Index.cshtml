@model IEnumerable<SliderModel>

@{
    ViewData["Title"] = "Quản lý Slider";
}

<div class="container-fluid p-0 fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="page-title">
            <i class="fas fa-sliders-h"></i> Danh sách Slider
        </h2>
        <a class="btn-custom-primary" asp-action="Create" asp-controller="Slider">
            <i class="fas fa-plus-circle"></i> Thêm slider mới
        </a>
    </div>

    <div class="table-custom">
        <table class="table" id="myTable">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Tên slider</th>
                    <th>Mô tả</th>
                    <th>Hình ảnh</th>
                    <th>Trạng thái</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><strong>#@item.Id</strong></td>
                        <td><strong>@item.Name</strong></td>
                        <td>
                            <div style="max-width: 250px; overflow: hidden; text-overflow: ellipsis;">
                                @Html.Raw(@item.Description)
                            </div>
                        </td>
                        <td>
                            <img src="~/media/sliders/@item.Image" width="200px" height="100px" alt="@item.Name"
                                style="object-fit: cover; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.1);" />
                        </td>
                        <td>
                            @if (item.Status == 1)
                            {
                                <span class="badge-custom badge-success-custom">
                                    <i class="fas fa-eye"></i> Hiển thị
                                </span>
                            }
                            else
                            {
                                <span class="badge-custom badge-danger-custom">
                                    <i class="fas fa-eye-slash"></i> Ẩn
                                </span>
                            }
                        </td>
                        <td>
                            <div class="d-flex gap-2">
                                <a class="btn btn-sm btn-custom-success" asp-action="Edit" asp-controller="Slider"
                                    asp-route-Id="@item.Id" title="Chỉnh sửa">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form asp-action="Delete" asp-controller="Slider" asp-route-Id="@item.Id" method="post"
                                    style="display: inline;"
                                    onsubmit="return confirm('Bạn có chắc chắn muốn xóa slider này?');">
                                    <button type="submit" class="btn btn-sm btn-custom-danger" title="Xóa">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>