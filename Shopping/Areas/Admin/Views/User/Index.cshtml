@{
    ViewData["Title"] = "Quản lý người dùng";
}

<div class="container-fluid p-0 fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="page-title">
            <i class="fas fa-users-cog"></i> Danh sách người dùng
        </h2>
        <a class="btn-custom-primary" asp-action="Create" asp-controller="User">
            <i class="fas fa-user-plus"></i> Thêm người dùng mới
        </a>
    </div>

    <div class="table-custom">
        <table class="table" id="myTable">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Tên người dùng</th>
                    <th>Email</th>
                    <th>Số điện thoại</th>
                    <th>Vai trò</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var usersWithRoles in Model)
                {
                    <tr>
                        <td><strong>#@usersWithRoles.User.Id.Substring(0, 8)</strong></td>
                        <td>
                            <div class="d-flex align-items-center">
                                <i class="fas fa-user-circle fa-2x text-primary me-2"></i>
                                <strong>@usersWithRoles.User.UserName</strong>
                            </div>
                        </td>
                        <td>
                            <i class="fas fa-envelope text-muted me-1"></i>
                            @usersWithRoles.User.Email
                        </td>
                        <td>
                            <i class="fas fa-phone text-muted me-1"></i>
                            @usersWithRoles.User.PhoneNumber
                        </td>
                        <td>
                            @if (usersWithRoles.RoleName == "Admin")
                            {
                                <span class="badge-custom badge-danger-custom">
                                    <i class="fas fa-crown"></i> @usersWithRoles.RoleName
                                </span>
                            }
                            else if (usersWithRoles.RoleName == "Moderator")
                            {
                                <span class="badge-custom badge-warning-custom">
                                    <i class="fas fa-shield-alt"></i> @usersWithRoles.RoleName
                                </span>
                            }
                            else
                            {
                                <span class="badge-custom badge-info-custom">
                                    <i class="fas fa-user"></i> @usersWithRoles.RoleName
                                </span>
                            }
                        </td>
                        <td>
                            <div class="d-flex gap-2">
                                <a class="btn btn-sm btn-custom-success" asp-action="Edit" asp-controller="User"
                                    asp-route-Id="@usersWithRoles.User.Id" title="Chỉnh sửa">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form asp-action="Delete" asp-controller="User" asp-route-Id="@usersWithRoles.User.Id"
                                    method="post" style="display: inline;"
                                    onsubmit="return confirm('Bạn có chắc chắn muốn xóa người dùng này?');">
                                    <button type="submit" class="btn btn-sm btn-custom-danger" title="Xóa">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>