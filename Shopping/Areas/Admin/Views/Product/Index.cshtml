@model IEnumerable<ProductModel>
@{
    ViewData["Title"] = "List Product";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            padding: 20px;
            overflow-y: auto; /* Đảm bảo cuộn dọc hoạt động */
        }

        h3 {
            color: #2c3e50;
            margin-bottom: 20px;
        }

        .table-responsive {
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            overflow-x: auto; /* Cuộn ngang nếu bảng quá rộng */
        }

        .table {
            margin-bottom: 0;
        }

            .table thead th {
                background-color: #2c3e50;
                color: #fff;
                border: none;
                padding: 12px;
                text-align: left;
            }

            .table tbody tr:hover {
                background-color: #f1f2f6;
            }

            .table td {
                vertical-align: middle;
                padding: 10px;
            }

        .btn-primary {
            background-color: #3498db;
            border: none;
            padding: 8px 16px;
            border-radius: 5px;
            margin-bottom: 15px;
        }

            .btn-primary:hover {
                background-color: #2980b9;
            }

        .btn-warning {
            padding: 5px 10px;
            margin-right: 5px;
        }

        .btn-danger {
            padding: 5px 10px;
        }

        .text-danger {
            color: #dc3545;
            font-weight: bold;
        }

        .text-primary {
            color: #3498db;
        }

        img {
            border-radius: 5px;
            object-fit: cover;
        }

        a {
            color: #3498db;
            text-decoration: none;
        }

            a:hover {
                color: #2980b9;
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="container">
        <h3><i class="fas fa-shopping-cart me-2"></i>List Products</h3>

        <a class="btn btn-primary" asp-action="Create" asp-controller="Product"><i class="fas fa-plus me-1"></i>Add Product</a>

        <div class="table-responsive">
            <table class="table table-striped" id="myTable">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Product Name</th>
                        <th>Quantity</th>
                        <th>Sold Out</th>
                        <th>Product Quantity</th>
                        <th>Product Description</th>
                        <th>Product Price</th>
                        <th>Product Image</th>
                        <th>Product Slug</th>
                        <th>Product Category</th>
                        <th>Product Brand</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>
                                @if (@item.Quantity == 0)
                                {
                                    <span class="text text-danger"><b>@item.Quantity</b></span>
                                }
                                else
                                {
                                    <span class="text text-primary">@item.Quantity</span>
                                }
                            </td>
                            <td>@item.SoldOut</td>
                            <td><a asp-action="CreateProductQuantity" asp-controller="Product" asp-route-Id="@item.Id">Add Quantity</a></td>
                            <td>@Html.Raw(@item.Description)</td>
                            <td>@string.Format(new System.Globalization.CultureInfo("vi-VN"), "{0:N0} VNĐ", item.Price)</td>
                            <td><img src="~/media/products/@item.Image" width="120px" height="150px" alt="@item.Name" /></td>
                            <td>@item.Slug</td>
                            <td>@item.Category.Name</td>
                            <td>@item.Brand.Name</td>
                            <td>
                                <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="Product" asp-route-Id="@item.Id">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="Product" asp-route-Id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>