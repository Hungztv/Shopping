@model CouponModel
@{
    ViewData["Title"] = "Quản lý mã giảm giá";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-ticket-alt text-primary"></i> Quản lý mã giảm giá
        </h1>
    </div>

    <div class="row">
        <div class="col-xl-12">
            <!-- Form thêm coupon -->
            <div class="card shadow mb-4">
                <div class="card-header py-3 bg-gradient-primary">
                    <h6 class="m-0 font-weight-bold text-white">
                        <i class="fas fa-plus-circle"></i> Tạo mã giảm giá mới
                    </h6>
                </div>
                <div class="card-body">
                    <form autocomplete="off" asp-controller="Coupon" asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">
                                    <i class="fas fa-tag text-primary"></i> Tên mã giảm giá
                                </label>
                                <input asp-for="Name" class="form-control" placeholder="VD: SUMMER2024" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">
                                    <i class="fas fa-layer-group text-info"></i> Số lượng
                                </label>
                                <input asp-for="Quantity" type="number" min="1" value="1" class="form-control" 
                                       placeholder="Nhập số lượng" />
                                <span asp-validation-for="Quantity" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row g-3 mt-2">
                            <div class="col-md-12">
                                <label class="form-label fw-semibold">
                                    <i class="fas fa-align-left text-secondary"></i> Mô tả
                                </label>
                                <textarea asp-for="Description" class="form-control" rows="3" 
                                          placeholder="Nhập mô tả về mã giảm giá"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row g-3 mt-2">
                            <div class="col-md-4">
                                <label class="form-label fw-semibold">
                                    <i class="fas fa-calendar-plus text-success"></i> Ngày bắt đầu
                                </label>
                                <input asp-for="DateStart" type="date" class="form-control" />
                                <span asp-validation-for="DateStart" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label fw-semibold">
                                    <i class="fas fa-calendar-times text-danger"></i> Ngày hết hạn
                                </label>
                                <input asp-for="DateExpired" type="date" class="form-control" />
                                <span asp-validation-for="DateExpired" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label fw-semibold">
                                    <i class="fas fa-toggle-on text-warning"></i> Trạng thái
                                </label>
                                <select name="Status" class="form-select">
                                    <option value="1">Kích hoạt</option>
                                    <option value="0">Ẩn</option>
                                </select>
                            </div>
                        </div>

                        <div class="mt-4">
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="fas fa-save"></i> Tạo mã giảm giá
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Danh sách coupon -->
            <div class="card shadow">
                <div class="card-header py-3 bg-gradient-success">
                    <h6 class="m-0 font-weight-bold text-white">
                        <i class="fas fa-list"></i> Danh sách mã giảm giá
                    </h6>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0" id="couponTable">
                            <thead class="table-light">
                                <tr>
                                    <th><i class="fas fa-tag"></i> Tên mã</th>
                                    <th><i class="fas fa-align-left"></i> Mô tả</th>
                                    <th class="text-center"><i class="fas fa-calendar-plus"></i> Ngày bắt đầu</th>
                                    <th class="text-center"><i class="fas fa-calendar-times"></i> Ngày hết hạn</th>
                                    <th class="text-center"><i class="fas fa-layer-group"></i> Số lượng</th>
                                    <th class="text-center"><i class="fas fa-toggle-on"></i> Kích hoạt</th>
                                    <th class="text-center"><i class="fas fa-info-circle"></i> Trạng thái</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var coupon in ViewBag.Coupons)
                                {
                                    <tr>
                                        <td class="fw-semibold">@coupon.Name</td>
                                        <td>@coupon.Description</td>
                                        <td class="text-center">
                                            <span class="badge bg-success">
                                                <i class="fas fa-calendar"></i> @coupon.DateStart.ToString("dd/MM/yyyy")
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            <span class="badge bg-danger">
                                                <i class="fas fa-calendar"></i> @coupon.DateExpired.ToString("dd/MM/yyyy")
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            <span class="badge bg-primary">@coupon.Quantity</span>
                                        </td>
                                        <td class="text-center">
                                            @if (@coupon.Status == 1)
                                            {
                                                <span class="badge bg-success">
                                                    <i class="fas fa-check-circle"></i> Đang kích hoạt
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">
                                                    <i class="fas fa-times-circle"></i> Ẩn
                                                </span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            @if (coupon.DateExpired < DateTime.Now)
                                            {
                                                <span class="badge bg-danger">
                                                    <i class="fas fa-exclamation-triangle"></i> Hết hạn
                                                </span>
                                            }
                                            else
                                            {
                                                TimeSpan remainingTime = coupon.DateExpired - DateTime.Now;
                                                int daysRemaining = remainingTime.Days;
                                                @if (daysRemaining == 0)
                                                {
                                                    <span class="badge bg-warning text-dark">
                                                        <i class="fas fa-clock"></i> Hôm nay
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-calendar-check"></i> Còn @daysRemaining ngày
                                                    </span>
                                                }
                                            }
                                        </td>
                                    </tr>
                                }
                                @if (ViewBag.Coupons.Count == 0)
                                {
                                    <tr>
                                        <td colspan="7" class="text-center text-muted py-4">
                                            <i class="fas fa-inbox fa-3x mb-3 d-block opacity-25"></i>
                                            Chưa có mã giảm giá nào
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/ui/1.14.0/jquery-ui.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(function () {
            $("#datepicker").datepicker({
                changeYear: true,
                minDate: 0,
                showButtonPanel: true,
                dateFormat: 'dd/mm/yy'

            });

        });
        $(function () {
            $("#datepicker2").datepicker({
                changeYear: true,
                minDate: +1,
                showButtonPanel: true,
                dateFormat: 'dd/mm/yy'

                    });

                });
    </script>
}

