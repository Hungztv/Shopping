@model IEnumerable<CategoryModel>

@{
    ViewData["Title"] = "Quản lý danh mục";

    Paginate pager = new Paginate();

    int pageNo = 0;

    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;

        pageNo = pager.CurrentPage;
    }
}

<div class="container-fluid p-0 fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="page-title">
            <i class="fas fa-folder-open"></i> Danh sách danh mục
        </h2>
        <a class="btn-custom-primary" asp-action="Create" asp-controller="Category">
            <i class="fas fa-plus-circle"></i> Thêm danh mục mới
        </a>
    </div>

    <div class="table-custom">
        <table class="table" id="myTable">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Tên danh mục</th>
                    <th>Mô tả</th>
                    <th>Slug</th>
                    <th>Trạng thái</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><strong>#@item.Id</strong></td>
                        <td><strong>@item.Name</strong></td>
                        <td>
                            <div style="max-width: 300px; overflow: hidden; text-overflow: ellipsis;">
                                @Html.Raw(@item.Description)
                            </div>
                        </td>
                        <td><code>@item.Slug</code></td>
                        <td>
                            @if (item.Status == "1")
                            {
                                <span class="badge-custom badge-danger-custom">
                                    <i class="fas fa-eye-slash"></i> Ẩn
                                </span>
                            }
                            else
                            {
                                <span class="badge-custom badge-success-custom">
                                    <i class="fas fa-eye"></i> Hiển thị
                                </span>
                            }
                        </td>
                        <td>
                            <div class="d-flex gap-2">
                                <a class="btn btn-sm btn-custom-success" asp-action="Edit" asp-controller="Category"
                                    asp-route-Id="@item.Id" title="Chỉnh sửa">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form asp-action="Delete" asp-controller="Category" asp-route-Id="@item.Id" method="post"
                                    style="display: inline;"
                                    onsubmit="return confirm('Bạn có chắc chắn muốn xóa danh mục này?');">
                                    <button type="submit" class="btn btn-sm btn-custom-danger" title="Xóa">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <partial name="_paging" model="@pager" />
</div>