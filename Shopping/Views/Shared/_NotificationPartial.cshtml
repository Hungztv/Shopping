@if (TempData["success"] != null)
{
    <div id="notification-success" class="alert alert-success notification show shadow-sm">
        <div class="d-flex align-items-center">
            <i class="fas fa-check-circle me-2"></i>
            <span>@TempData["success"]</span>
        </div>
        <span class="close-btn">&times;</span>
    </div>
}

@if (TempData["error"] != null)
{
    <div id="notification-error" class="alert alert-danger notification show shadow-sm">
        <div class="d-flex align-items-center">
            <i class="fas fa-exclamation-circle me-2"></i>
            <span>@TempData["error"]</span>
        </div>
        <span class="close-btn">&times;</span>
    </div>
}

<style>
    .notification {
        position: fixed;
        top: -50px; /* Ẩn phía trên trước khi xuất hiện */
        right: 20px;
        z-index: 1050; /* Đảm bảo nằm trên các thành phần khác */
        min-width: 300px;
        padding: 15px 20px;
        border-radius: 8px;
        transition: all 0.5s ease;
        opacity: 0;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .notification.show {
            top: 20px; /* Trượt xuống */
            opacity: 1;
            transform: translateY(0);
        }

        .notification.hide {
            opacity: 0;
            transform: translateY(-20px);
        }

        .notification .close-btn {
            cursor: pointer;
            font-size: 20px;
            font-weight: bold;
            margin-left: 15px;
            color: #666;
            transition: color 0.3s ease;
        }

            .notification .close-btn:hover {
                color: #dc3545; /* Màu đỏ khi hover */
            }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border-color: #c3e6cb;
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
        border-color: #f5c6cb;
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        let notifications = document.querySelectorAll(".notification");

        notifications.forEach(notification => {
            // Hiển thị thông báo ngay lập tức
            setTimeout(() => {
                notification.classList.add("hide");
                setTimeout(() => notification.remove(), 500); // Xóa sau khi ẩn
            }, 3000); // Ẩn sau 3 giây

            // Đóng thủ công khi click
            notification.querySelector(".close-btn").addEventListener("click", function () {
                notification.classList.add("hide");
                setTimeout(() => notification.remove(), 500);
            });
        });
    });
</script>