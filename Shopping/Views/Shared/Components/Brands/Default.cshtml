@model IEnumerable<BrandModel>

@if (Model != null && Model.Any())
{
    @foreach (var item in Model)
    {
        <li class="brand-item">
            <a asp-action="Index" asp-controller="Brand" asp-route-Slug="@item.Slug" class="brand-link">
                <div class="brand-icon">
                    <i class="fas fa-award"></i>
                </div>
                <span class="brand-name">@item.Name</span>
                <span class="brand-count">@(ViewBag.BrandProductCount != null && ViewBag.BrandProductCount.ContainsKey(item.Id)
                                ? ViewBag.BrandProductCount[item.Id] : 0)</span>
            </a>
        </li>
    }
}
else
{
    <li class="text-center text-muted py-3">
        <i class="fas fa-certificate" style="font-size: 2rem; opacity: 0.3;"></i>
        <p class="mt-2 mb-0">Chưa có thương hiệu nào</p>
    </li>
}