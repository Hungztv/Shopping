@model Shopping.Models.ViewModels.CheckoutViewModel
@{
    ViewData["Title"] = "Thanh toán";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="checkout" class="my-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2>Hoàn tất đơn hàng</h2>
            <p class="text-muted">Vui lòng điền thông tin bên dưới để hoàn tất việc đặt hàng.</p>
        </div>

        <form asp-action="Index" asp-controller="Checkout" method="post">
            @Html.AntiForgeryToken()
            <div class="row g-5">
                <!-- Order Summary -->
                <div class="col-md-5 col-lg-4 order-md-last">
                    <div class="card shadow-sm border-0 sticky-top" style="top: 100px;">
                        <div class="card-header bg-light">
                            <h4 class="d-flex justify-content-between align-items-center mb-0">
                                <span class="text-primary">Tóm tắt đơn hàng</span>
                                <span class="badge bg-primary rounded-pill">@Model.CartSummary.CartItems.Count</span>
                            </h4>
                        </div>
                        <ul class="list-group list-group-flush">
                            @foreach (var item in Model.CartSummary.CartItems)
                            {
                                <li class="list-group-item d-flex justify-content-between lh-sm">
                                    <div>
                                        <h6 class="my-0">@item.ProductName</h6>
                                        <small class="text-muted">Số lượng: @item.Quantity</small>
                                    </div>
                                    <span class="text-muted">@((item.Price * item.Quantity).ToString("N0")) VNĐ</span>
                                </li>
                            }
                            <li class="list-group-item d-flex justify-content-between">
                                <span>Tổng tiền hàng (VNĐ)</span>
                                <strong>@Model.CartSummary.GrandTotal.ToString("N0") VNĐ</strong>
                            </li>
                             <li class="list-group-item d-flex justify-content-between">
                                <span>Phí vận chuyển (VNĐ)</span>
                                <strong>@Model.CartSummary.ShippingPrice.ToString("N0") VNĐ</strong>
                            </li>
                            @if(Model.CartSummary.DiscountAmount > 0)
                            {
                                <li class="list-group-item d-flex justify-content-between bg-light">
                                    <div class="text-success">
                                        <h6 class="my-0">Mã giảm giá</h6>
                                        <small>@Model.CartSummary.CouponCode</small>
                                    </div>
                                    <span class="text-success">−@Model.CartSummary.DiscountAmount.ToString("N0") VNĐ</span>
                                </li>
                            }
                            <li class="list-group-item d-flex justify-content-between fs-5 fw-bold">
                                <span>Tổng cộng</span>
                                <strong class="text-warning">@((Model.CartSummary.GrandTotal - Model.CartSummary.DiscountAmount + Model.CartSummary.ShippingPrice).ToString("N0")) VNĐ</strong>
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- Billing Address -->
                <div class="col-md-7 col-lg-8">
                    <div class="card shadow-sm border-0">
                        <div class="card-body p-4">
                             <h4 class="mb-3">Thông tin giao hàng</h4>
                             <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                             <div class="row g-3">
                                <div class="col-12">
                                    <label asp-for="Order.Name" class="form-label">Họ và Tên người nhận</label>
                                    <input asp-for="Order.Name" type="text" class="form-control" placeholder="Nguyễn Văn A">
                                    <span asp-validation-for="Order.Name" class="text-danger"></span>
                                </div>

                                <div class="col-12">
                                    <label asp-for="Order.PhoneNumber" class="form-label">Số điện thoại</label>
                                    <input asp-for="Order.PhoneNumber" type="tel" class="form-control" placeholder="09xxxxxxxx">
                                    <span asp-validation-for="Order.PhoneNumber" class="text-danger"></span>
                                </div>

                                <div class="col-12">
                                    <label asp-for="Order.Address" class="form-label">Địa chỉ nhận hàng</label>
                                    <input asp-for="Order.Address" type="text" class="form-control" placeholder="Số nhà, đường, phường/xã, quận/huyện, tỉnh/thành phố">
                                    <span asp-validation-for="Order.Address" class="text-danger"></span>
                                </div>
                            </div>

                            <hr class="my-4">

                            <div class="d-grid">
                                <button class="btn btn-primary btn-lg" type="submit">Xác nhận và Đặt hàng</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
