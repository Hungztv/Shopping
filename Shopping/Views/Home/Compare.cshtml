@{
    ViewData["Title"] = "Danh sách so sánh";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var key = 0;
}

<!-- Main Content -->
<div class="container my-5">
    <div class="row">
        <div class="col-12">
            <h3 class="text-center mb-4 fw-bold">Danh sách so sánh</h3>
            <div class="table-responsive">
                <table class="table table-hover align-middle" id="myTable">
                    <thead class="table-dark">
                        <tr>
                            <th>STT</th>
                            <th>Tên sản phẩm</th>
                            <th>Mô tả</th>
                            <th>Giá</th>
                            <th>Hình ảnh</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var compare_product in Model)
                        {
                            key++;
                            <tr>
                                <td>@key</td>
                                <td>@compare_product.Product.Name</td>
                                <td>@Html.Raw(@compare_product.Product.Description)</td>
                                <td class="text-warning fw-bold">@string.Format(new System.Globalization.CultureInfo("vi-VN"), "{0:N0} VNĐ", compare_product.Product.Price)</td>
                                <td>
                                    <img src="~/media/products/@compare_product.Product.Image" width="120px" height="150px" class="img-fluid rounded" alt="@compare_product.Product.Name" />
                                </td>
                                <td>
                                    <a class="btn btn-danger btn-sm confirmDeletion"
                                       asp-action="DeleteCompare"
                                       asp-controller="Home"
                                       asp-route-Id="@compare_product.Compares.Id">
                                        <i class="fa fa-trash"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>