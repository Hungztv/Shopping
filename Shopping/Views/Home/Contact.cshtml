@model ContactModel
@{
    ViewData["Title"] = "Liên hệ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .contact-page {
        padding: 3rem 0;
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        min-height: 100vh;
    }

    .contact-header {
        text-align: center;
        margin-bottom: 3rem;
        animation: fadeInDown 0.6s ease;
    }

    .contact-header h1 {
        font-size: 2.5rem;
        font-weight: 800;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 1rem;
    }

    .contact-header p {
        font-size: 1.1rem;
        color: #6c757d;
        max-width: 600px;
        margin: 0 auto;
    }

    .contact-card {
        background: white;
        border-radius: 20px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition: all 0.3s ease;
        height: 100%;
        animation: fadeInUp 0.6s ease;
        border: 2px solid transparent;
    }

    .contact-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 50px rgba(0, 0, 0, 0.15);
        border-color: rgba(102, 126, 234, 0.3);
    }

    .contact-card .card-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 1.5rem;
        border: none;
    }

    .contact-card .card-header h5 {
        color: white;
        font-weight: 700;
        font-size: 1.25rem;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .contact-card .card-header i {
        width: 40px;
        height: 40px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.1rem;
    }

    .contact-card .card-body {
        padding: 2rem;
    }

    .map-container {
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
        margin-bottom: 1.5rem;
    }

    .map-container iframe {
        width: 100%;
        height: 350px;
        border: none;
    }

    .contact-description {
        padding: 1.25rem;
        background: linear-gradient(135deg, #f093fb15 0%, #f5576c15 100%);
        border-radius: 12px;
        border-left: 4px solid #667eea;
        color: #495057;
        line-height: 1.7;
    }

    .contact-info-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .contact-info-item {
        display: flex;
        align-items: center;
        gap: 15px;
        padding: 1.25rem;
        margin-bottom: 1rem;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        border-radius: 12px;
        transition: all 0.3s ease;
        border: 2px solid transparent;
    }

    .contact-info-item:hover {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        transform: translateX(8px);
        box-shadow: 0 5px 20px rgba(102, 126, 234, 0.3);
    }

    .contact-info-item .icon {
        width: 50px;
        height: 50px;
        min-width: 50px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.3rem;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
        transition: all 0.3s ease;
    }

    .contact-info-item:hover .icon {
        background: white;
        color: #667eea;
        transform: rotate(360deg) scale(1.1);
    }

    .contact-info-item .content {
        flex: 1;
    }

    .contact-info-item .label {
        font-size: 0.85rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        opacity: 0.8;
        margin-bottom: 0.25rem;
    }

    .contact-info-item .value {
        font-size: 1.1rem;
        font-weight: 600;
    }

    .social-section {
        background: white;
        border-radius: 20px;
        padding: 2rem;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
        animation: fadeInRight 0.6s ease;
    }

    .social-header {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 1.5rem;
        padding-bottom: 1rem;
        border-bottom: 2px solid #f0f0f0;
    }

    .social-header i {
        width: 45px;
        height: 45px;
        background: linear-gradient(135deg, #1877f2 0%, #0d5dbf 100%);
        color: white;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
        box-shadow: 0 4px 15px rgba(24, 119, 242, 0.3);
    }

    .social-header h5 {
        margin: 0;
        font-weight: 700;
        font-size: 1.25rem;
        background: linear-gradient(135deg, #1877f2 0%, #0d5dbf 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .fb-page {
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
    }

    /* Contact Form */
    .contact-form-section {
        background: white;
        border-radius: 20px;
        padding: 2rem;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
        margin-top: 2rem;
        animation: fadeInUp 0.8s ease;
    }

    .contact-form-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .contact-form-header h3 {
        font-weight: 700;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-group label {
        font-weight: 600;
        color: #495057;
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .form-group label i {
        color: #667eea;
    }

    .form-control {
        border: 2px solid #e9ecef;
        border-radius: 12px;
        padding: 0.875rem 1rem;
        font-size: 1rem;
        transition: all 0.3s ease;
    }

    .form-control:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
        outline: none;
    }

    .btn-send {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 1rem 3rem;
        border: none;
        border-radius: 12px;
        font-weight: 600;
        font-size: 1.1rem;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 5px 20px rgba(102, 126, 234, 0.3);
        display: flex;
        align-items: center;
        gap: 10px;
        margin: 0 auto;
    }

    .btn-send:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
    }

    .btn-send i {
        transition: transform 0.3s ease;
    }

    .btn-send:hover i {
        transform: translateX(5px);
    }

    /* Animations */
    @@keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translateY(-30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes fadeInRight {
        from {
            opacity: 0;
            transform: translateX(30px);
        }

        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .contact-header h1 {
            font-size: 2rem;
        }

        .map-container iframe {
            height: 250px;
        }

        .contact-card .card-body {
            padding: 1.5rem;
        }

        .btn-send {
            width: 100%;
            justify-content: center;
        }
    }
</style>

<div class="contact-page">
    <div class="container">
        <!-- Header -->
        <div class="contact-header">
            <h1>
                <i class="fas fa-envelope"></i> Liên hệ với chúng tôi
            </h1>
            <p>Chúng tôi luôn sẵn sàng lắng nghe và hỗ trợ bạn. Hãy liên hệ với chúng tôi qua các thông tin dưới đây.
            </p>
        </div>

        <div class="row">
            <!-- Map Section -->
            <div class="col-lg-6 mb-4">
                <div class="contact-card">
                    <div class="card-header">
                        <h5>
                            <i class="fas fa-map-marked-alt"></i>
                            Vị trí của chúng tôi
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="map-container">
                            @Html.Raw(@Model.Map)
                        </div>
                        <div class="contact-description">
                            @Html.Raw(Model.Description)
                        </div>
                    </div>
                </div>
            </div>

            <!-- Contact Info Section -->
            <div class="col-lg-6 mb-4">
                <div class="contact-card">
                    <div class="card-header">
                        <h5>
                            <i class="fas fa-info-circle"></i>
                            Thông tin liên hệ
                        </h5>
                    </div>
                    <div class="card-body">
                        <ul class="contact-info-list">
                            <li class="contact-info-item">
                                <div class="icon">
                                    <i class="fas fa-user"></i>
                                </div>
                                <div class="content">
                                    <div class="label">Tên</div>
                                    <div class="value">@Model.Name</div>
                                </div>
                            </li>
                            <li class="contact-info-item">
                                <div class="icon">
                                    <i class="fas fa-envelope"></i>
                                </div>
                                <div class="content">
                                    <div class="label">Email</div>
                                    <div class="value">@Model.Email</div>
                                </div>
                            </li>
                            <li class="contact-info-item">
                                <div class="icon">
                                    <i class="fas fa-phone-alt"></i>
                                </div>
                                <div class="content">
                                    <div class="label">Điện thoại</div>
                                    <div class="value">@Model.Phone</div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- Social Section -->
                <div class="social-section mt-4">
                    <div class="social-header">
                        <i class="fab fa-facebook"></i>
                        <h5>Theo dõi chúng tôi trên Facebook</h5>
                    </div>
                    <div class="fb-page" data-href="https://www.facebook.com/divineshop.vn" data-tabs="timeline"
                        data-width="100%" data-height="300" data-small-header="false" data-adapt-container-width="true"
                        data-hide-cover="false" data-show-facepile="true">
                        <blockquote cite="https://www.facebook.com/divineshop.vn" class="fb-xfbml-parse-ignore">
                            <a target="_blank" href="https://www.facebook.com/Dmhung1210">Web Ban Hang ASP Net</a>
                        </blockquote>
                    </div>
                </div>
            </div>
        </div>

        <!-- Contact Form Section -->
        <div class="contact-form-section">
            <div class="contact-form-header">
                <h3><i class="fas fa-paper-plane"></i> Gửi tin nhắn cho chúng tôi</h3>
                <p class="text-muted">Điền thông tin vào form bên dưới và chúng tôi sẽ phản hồi sớm nhất có thể</p>
            </div>
            <form id="contactForm">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label><i class="fas fa-user"></i> Họ và tên</label>
                            <input type="text" class="form-control" placeholder="Nhập họ và tên của bạn" required>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label><i class="fas fa-envelope"></i> Email</label>
                            <input type="email" class="form-control" placeholder="Nhập email của bạn" required>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label><i class="fas fa-phone"></i> Số điện thoại</label>
                            <input type="tel" class="form-control" placeholder="Nhập số điện thoại của bạn">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label><i class="fas fa-tag"></i> Chủ đề</label>
                            <input type="text" class="form-control" placeholder="Chủ đề liên hệ" required>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label><i class="fas fa-comment-alt"></i> Nội dung</label>
                    <textarea class="form-control" rows="5" placeholder="Nhập nội dung tin nhắn của bạn..."
                        required></textarea>
                </div>
                <button type="submit" class="btn-send">
                    <i class="fas fa-paper-plane"></i>
                    Gửi tin nhắn
                </button>
            </form>
        </div>
    </div>
</div>

<script>
    document.getElementById('contactForm').addEventListener('submit', function (e) {
        e.preventDefault();
        // Hiển thị thông báo thành công
        Swal.fire({
            icon: 'success',
            title: 'Gửi thành công!',
            text: 'Cảm ơn bạn đã liên hệ. Chúng tôi sẽ phản hồi sớm nhất có thể.',
            confirmButtonColor: '#667eea'
        });
        this.reset();
    });
</script>