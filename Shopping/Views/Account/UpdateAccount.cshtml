@model AppUserModel
@{
    ViewData["Title"] = "Update Account Information";
}
<section id="">
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card shadow p-4">
                    <h2 class="text-center">Cập nhật tài khoản</h2>
                    <form autocomplete="off" asp-action="UpdateInfoAccount" asp-controller="Account" method="POST">
                        <input type="hidden" asp-for="Id" />

                        <div class="form-group">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        </div>

                        <div class="form-group">
                            <label>UserName</label>
                            <input asp-for="UserName" readonly required class="form-control" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Email</label>
                            <input asp-for="Email" readonly required class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Số điện thoại</label>
                            <input asp-for="PhoneNumber" required class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Mật Khẩu Cũ</label>
                            <input type="text" readonly value="@Model.PasswordHash" class="form-control" />
                            <span asp-validation-for="PasswordHash" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Mật Khẩu Mới</label>
                            <input type="text" name="PasswordHash" required class="form-control" />
                            <span asp-validation-for="PasswordHash" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Cập Nhật</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
