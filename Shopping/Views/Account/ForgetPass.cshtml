@model AppUserModel
@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="forgot-password" class="my-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="card shadow-sm border-0 p-4">
                    <h2 class="text-center fw-bold mb-4 text-primary">Quên mật khẩu</h2>
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    <form asp-action="SendMailForgetPass" asp-controller="Account" method="post">
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="Nhập email đã đăng ký" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary w-100 mt-3" id="submitButton">
                            <span id="submitText">Gửi yêu cầu</span>
                            <span class="spinner-border spinner-border-sm d-none" id="submitSpinner" role="status" aria-hidden="true"></span>
                        </button>
                        <p class="text-center mt-3">
                            Quay lại <a asp-action="Login" asp-controller="Account" class="text-primary">Đăng nhập</a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            // Show loading spinner on form submit
            $("form").submit(function () {
                $("#submitText").addClass("d-none");
                $("#submitSpinner").removeClass("d-none");
                $("#submitButton").prop("disabled", true);
            });
        });
    </script>
}