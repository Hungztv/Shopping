@model IEnumerable<ProductModel>
@{
    ViewData["Title"] = @ViewBag.Keyword;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Overlay Effect */
    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.95), rgba(118, 75, 162, 0.95));
        opacity: 0;
        transition: all 0.4s ease;
        border-radius: 0.375rem;
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 10;
    }

    .card:hover .overlay {
        opacity: 1;
    }

    .overlay-content {
        transform: translateY(20px);
        transition: transform 0.4s ease;
    }

    .card:hover .overlay-content {
        transform: translateY(0);
    }

    .overlay .btn-warning {
        background: #ffc107;
        border: none;
        padding: 10px 25px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .overlay .btn-warning:hover {
        background: #ffca2c;
        transform: scale(1.05);
    }
</style>

<!-- Main Content -->
<div class="container my-5">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-lg-3">
            @Html.Partial("_SidebarPartial")
        </div>

        <!-- Product List -->
        <div class="col-lg-9">
            <div class="features-items">
                <h2 class="text-center mb-4 fw-bold">Kết quả tìm kiếm: @ViewBag.Keyword</h2>
                @if (Model != null && Model.Any())
                {
                    <div class="row row-cols-1 row-cols-md-3 g-4">
                        @foreach (var item in Model)
                        {
                            <div class="col">
                                <div class="card h-100 shadow-sm border-0 position-relative">
                                    <div class="card-img-top text-center p-3">
                                        <a asp-action="Details" asp-controller="Product" asp-route-Id="@item.Id">
                                            <img src="@(item.Image.StartsWith("http") ? item.Image : Url.Content("~/media/products/" + item.Image))"
                                                alt="@item.Name" class="img-fluid"
                                                style="max-height: 200px; object-fit: contain;">
                                        </a>
                                    </div>
                                    <div class="card-body text-center">
                                        <h5 class="card-title">
                                            <a asp-action="Details" asp-controller="Product" asp-route-Id="@item.Id"
                                                class="text-dark text-decoration-none">@item.Name</a>
                                        </h5>
                                        <p class="text-muted mb-1">Danh mục: @item.Category.Name</p>
                                        <p class="text-muted mb-1">Thương hiệu: @item.Brand.Name</p>
                                        <h4 class="text-warning fw-bold mb-3">@string.Format(new
                                                                                System.Globalization.CultureInfo("vi-VN"), "{0:N0} VNĐ", item.Price)</h4>
                                <button class="btn btn-warning add-to-cart" data-product_id="@item.Id">
                                    <i class="fas fa-shopping-cart"></i> Thêm giỏ hàng
                                </button>
                            </div>
                            <div class="card-footer bg-light border-top-0 text-center">
                                <div class="btn-group" role="group">
                                    <a href="#" class="btn btn-outline-danger btn-sm add-btn-wishlist"
                                        data-product_id="@item.Id">
                                        <i class="fas fa-heart"></i> Wishlist
                                    </a>
                                    <a href="#" class="btn btn-outline-primary btn-sm add-btn-compare"
                                        data-product_id="@item.Id">
                                        <i class="fas fa-exchange-alt"></i> Compare
                                    </a>
                                </div>
                            </div>
                            <!-- Overlay -->
                            <div class="overlay">
                                <div class="overlay-content text-center">
                                    <h4 class="text-warning fw-bold">@string.Format(new
                                                                                System.Globalization.CultureInfo("vi-VN"), "{0:N0} VNĐ", item.Price)</h4>
                                    <p class="text-white">@item.Name</p>
                                    <p class="text-white">Danh mục: @item.Category.Name</p>
                                    <p class="text-white">Thương hiệu: @item.Brand.Name</p>
                                    <button class="btn btn-warning add-to-cart" data-product_id="@item.Id">
                                        <i class="fas fa-shopping-cart"></i> Thêm giỏ hàng
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                                        }
                    </div>
                }
                else
                {
                    <p class="text-center text-muted">Không tìm thấy sản phẩm nào phù hợp với từ khóa "@ViewBag.Keyword".
                    </p>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Add to Cart
            $('.add-to-cart').click(function () {
                var id = $(this).data("product_id");
                $.ajax({
                    type: "POST",
                    url: "@Url.Action("Add", "Cart")",
                    data: { Id: id },
                    success: function (result) {
                        if (result) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Thành công',
                                text: 'Thêm giỏ hàng thành công!',
                                timer: 1500,
                                showConfirmButton: false
                            });
                        }
                    },
                    error: function () {
                        Swal.fire({
                            icon: 'error',
                            title: 'Lỗi',
                            text: 'Có lỗi xảy ra khi thêm vào giỏ hàng.'
                        });
                    }
                });
            });

            // Add to Wishlist
            $('.add-btn-wishlist').click(function () {
                var id = $(this).data("product_id");
                $.ajax({
                    type: "POST",
                    url: "@Url.Action("AddWishlist", "Home")",
                    data: { Id: id },
                    success: function (result) {
                        if (result) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Thành công',
                                text: 'Thêm vào danh sách yêu thích thành công!',
                                timer: 1500,
                                showConfirmButton: false
                            });
                        }
                    }
                });
            });

            // Add to Compare
            $('.add-btn-compare').click(function () {
                var id = $(this).data("product_id");
                $.ajax({
                    type: "POST",
                    url: "@Url.Action("AddCompare", "Home")",
                    data: { Id: id },
                    success: function (result) {
                        if (result) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Thành công',
                                text: 'Thêm vào danh sách so sánh thành công!',
                                timer: 1500,
                                showConfirmButton: false
                            });
                        }
                    }
                });
            });
        });
    </script>
}